<Window x:Class="DesktopAlertWithScreenPositionOffset.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        ResizeMode="CanResize"
        Title="MainWindow" Height="400" Width="675">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Margin="10" 
                   Text="This example demonstrates how to set a ScreenPositionOffset to RadDesktopAlert through the DesktopAlertManager's constructor in order to visualize it relatively within the Window of your application."
                   TextAlignment="Justify"
                   TextWrapping="Wrap"
                   FontStyle="Italic"
                   FontSize="14"/>
        <telerik:RadButton Grid.Row="1" Grid.Column="0"
                           Content="Show Alert"
                           Click="RadButton_Click" 
                           Margin="10"
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Top"/>
    </Grid>
</Window>
