<UserControl x:Class="CustomDragVisual.Example"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomDragVisual"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <local:CustomTreeView IsDragDropEnabled="True" SelectionMode="Extended" >
            <telerik:RadTreeViewItem Header="Item A" IsSelected="True"/>
            <telerik:RadTreeViewItem Header="Item B" IsSelected="True"/>
            <telerik:RadTreeViewItem Header="Item C" IsSelected="True"/>
            <telerik:RadTreeViewItem Header="Item D" />
            <telerik:RadTreeViewItem Header="Item E" />
            <telerik:RadTreeViewItem Header="Item F" />
            <telerik:RadTreeViewItem Header="Item G" />
        </local:CustomTreeView>
        
        <TextBlock Text="Drag some items to see the custom DragVisual Content" FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
